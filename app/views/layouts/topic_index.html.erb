<% content_for :body do %>
<link rel="stylesheet" type="text/css" href="/css/custom.css">
<link rel="stylesheet" type="text/css" href="/css/page.css">
<script src="/js/jquery.infinitescroll.js"></script>  
<style type="text/css" media="all">
#page_content .myrow { margin-top: 20px; width: 1000px; height: 285px; }
#page_content .myrow .box { height: 285px; float: left; width: 326px; background-image: url('/images/box-topic-index.png'); margin-bottom: 30px; }
#page_content .myrow .box:hover { background-image: url('/images/box-topic-index-hover.png'); }
#page_content .myrow .box .inner { margin: 30px 30px 0px 30px; } 
#page_content .myrow .box .inner .title { text-align: center; height: 50px; line-height: 25px; overflow: hidden} 
</style>

<%= render 'layouts/index_top_menu' %>

<div class="container">
  <div id="page_content">
    <% @topics.each_slice(3) do |ps| %>
    <div class="myrow">
      <% ps.each do |p| %>
      <div class="box">
        <div class="inner">
          <div class="title">
            <a href="<%= topic_path(p, p.children.first) %>" title="<%= p.title %>"><%= p.title %></a>
          </div>
        </div>
        <div class="pic"><a href="<%= view_post_path(p) %>"><%= image_tag p.image.thumb.url if p.image.thumb.url %></a></div>
      </div>
      <% end %>
    </div>
    <% end %>
  </div>

  <div id="mypaginate"><%= paginate @topics %></div>
</div>


<%= render 'layouts/footer' %>
<% end %>
<%= render 'layouts/base' %>
