<% content_for :body do %>
<link rel="stylesheet" type="text/css" href="/css/custom.css">
<link rel="stylesheet" type="text/css" href="/css/page.css">
<style type="text/css">
#page_content .myrow { margin-top: 20px; width: 1000px; height: 260px; }
#page_content .myrow .box { height: 260px; float: left; width: 326px; background-image: url('/images/box2.png'); margin-bottom: 30px; }
#page_content .myrow .box:hover { background-image: url('/images/box_hover2.png'); }
</style>
<script src="/js/jquery.infinitescroll.js"></script>  

<%= render 'layouts/index_top_menu' %>

<div class="container">
  <div id="page_menu" class="text-center">
    <% @tabs.each do |t| %>
      <% if t.id == params[:children_id].to_i %>
        <%= link_to t.title, page_path(t.root, t), class: 'active' %>
      <% else %>
        <%= link_to t.title, page_path(t.root, t) %>
      <% end %>
    <% end %>
  </div>
  <div id="page_content">
    <% @posts.each_slice(3) do |ps| %>
    <div class="myrow">
      <% ps.each do |p| %>
      <div class="box">
        <div class="inner">
          <div class="title">
            <a href="<%= view_post_path(p) %>" title="<%= p.title %>"><%= p.title %></a>
          </div>
          <div class="content">
            <a href="<%= view_post_path(p) %>"><%= h strip_tags(p.content)[0,100] %></a>
          </div>
          <div class="created_at"><%= p.created_at.strftime('%Y年%m月%d日') %></div>
        </div>
      </div>
      <% end %>
    </div>
    <% end %>
  </div>

  <div id="mypaginate"><%= paginate @posts %></div>
</div>


<%= render 'layouts/footer' %>
<% end %>
<%= render 'layouts/base' %>